<div class="depot_form">
  <%= form_for(user) do |f| %>
    <fieldset>
    <legend>Enter User Details</legend>

    <div class="field">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, size: 40 %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

    </fieldset>
  <% end %>
</div>
